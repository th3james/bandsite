<% for post in @posts %>
    <div class="news_post">
        <div class="post_title">
          <%=h post.title %>
        </div>
        <div class="post_body">
          <%=post.body %>
          <br/>
          <%= link_to "Delete this post", post, :confirm => 'Are you sure?', :method => :delete %>
        </div>
    </div>
<% end %>

<p><%= link_to "New Post", new_post_path %></p>
