<% for post in @posts %>
    <div class="news_post">
        <div class="post_title top_rounded">
          <%=h post.title %>
        </div>
        <div class="post_body bottom_rounded">
          <%=post.body %>
          <br/>
        </div>
      <%= link_to "Show", post %></br>
      <%= link_to "Edit", edit_post_path(post) %></br>
      <%= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete %></br>
    </div>
<% end %>
